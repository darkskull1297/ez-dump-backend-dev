    style.
      body {
        margin: 0;        
        font-family: sans-serif;
      }
      .main {
        width: 700px;
        margin: auto;
        font-size: 18px;
      }

      img.logo {
        width: 300px;
        margin: auto;
      }

      a.sty {
        cursor: default;
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
      }

      h1, h2, h3, p {
        color: black;
        text-align: center;
      }

      .list{
        width: 75%;
        margin:auto auto 50px;
      }

      .list p{
        margin: 15px auto;
        text-align: initial;
      }

      .list p a{
        text-decoration: none;
        color: #0078FF;
        font-weight: 500;
      }

      .desc p{
        padding: 0px 90px;
        margin: 0;
      }

      .addr, .date {
        margin: 1px;
        font-size: 19px
      }

      img.icon{
        width: 35px;
        height: 35px;
      }
      img.icon2{
        width: 40px;
        height: 40px;
      }
      img.icon3{
        width: 30px;
        height: 30px;
      }

      .footer {
        width: 700px;
        margin: auto;
        padding-bottom: 30px;
      }

       table tr td{
        padding: 20px 80px;
      }

      table a{
        text-decoration: none;
        color: #000;
        font-weight: 500;
      }

      td div{
        display: flex;
        align-items: center;
      }
      td div a{
        margin-right: 5px;
      }

      .features{
        color: #0078FF;
        font-weight: 500;
        margin-bottom: 50px;
      }
      .center-table{
        margin: auto;
      }
      .content-1{
        margin-bottom: 30px;
      }
      .content-1 span{
        color: #0078FF;
      }
      .content-1 p{
        margin: 0;
      }

      .content-2 p{
        margin: 0;
      }
      
      .content-2 span{
        color: #0078FF;
      }
     
