html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    style.
      body {
        margin: 0;        
        font-family: sans-serif;
      }
      .main {
        width: 700px;
        margin: auto;
        font-size: 18px;
      }

      img.logo {
        width: 300px;
        margin: auto;
      }

      a.sty {
        cursor: default;
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
      }

      h1, h2, h3, p {
        color: black;
        text-align: center;
        margin: 0;
      }     
      a{
        color: #0078FF;
      }
      
     .footer {
        width: 700px;
        margin: auto;
        padding-bottom: 30px;
      }

      .content-footer{
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 20px;
        margin-bottom: 100px;
      }

      .content-footer .item{
        margin: auto;
      }
       td div{
        display: flex;
        align-items: center;
      }

      td div a{
        margin-right: 5px;
      }

      table {
        margin-top: 18px;
      }

      table tr td{
        padding: 5px 60px;
      }

      img.icon{
        width: 35px;
        height: 35px;
      }

      table a{
        text-decoration: none;
        color: #000;
        font-weight: 500;
      }
      .content{
        margin-bottom: 30px;
        text-align: center;
      }
      .content2{
        margin-bottom: 60px;
      }
      .content3{
        margin-bottom: 80px;
      }
      .content em{
        color: #000;
      }
  body
    .main
      a.sty(href='#').content
        img.logo(src="https://res.cloudinary.com/dwt2mlvvc/image/upload/v1607695871/LightLogo_dp2edv.png")
      
      .content-0.content 
        h3 Foreman #{name} has made a truck request.

        table.center-table
          tr
            td 
              h3 Start date
            td 
              h3 End date
          tr
            td 
              p #{parseStartDate}
            td   
              p #{parseEndDate}
          tr
            td 
              h3 Load site
            td 
              h3 Dump site
          tr
            td 
              p #{loadSite}
            td   
              p #{dumpSite}
          tr
            td 
              h3 Material
            td 
              h3 Directions
          tr
            td 
              p #{material}
            td   
              p #{direactions}

      .content-0.content 
        h3 Requested trucks 
      
        table.center-table
          tr
            td 
              h3 Type
            td 
              h3 Sub Type
            td 
              h3 Amount
              
            for truck in truckCategories
              tr
                td 
                  for truckType in truck.truckTypes
                    p #{truckType}
                td 
                  for truckSubType in truck.truckSubtypes
                    p #{truckSubType}
                td 
                  p #{truck.amount}
    
