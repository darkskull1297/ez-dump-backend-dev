{
  "name": "nestjs-base",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "npm run start:debug",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "lint": "eslint src/**/*.ts",
    "lint:one": "eslint",
    "lint:write": "eslint src/**/*.ts --fix",
    "lint:write:one": "eslint --fix",
    "prettier": "prettier --write src/**/*.ts",
    "prettier:one": "prettier --write",
    "lintAndPretty": "npm run prettier && npm run lint:write"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nestjs/common": "^7.4.2",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.2",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/platform-socket.io": "^7.4.4",
    "@nestjs/schedule": "^0.4.1",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/testing": "^7.4.2",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.4.4",
    "@sendgrid/mail": "^7.2.1",
    "@slack/client": "^5.0.2",
    "@types/lodash": "^4.14.168",
    "aws-sdk": "^2.730.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "clone-buffer": "^1.0.0",
    "date-fns": "^2.15.0",
    "express": "^4.17.1",
    "express-list-routes": "^0.1.4",
    "firebase-admin": "^9.2.0",
    "geolib": "^3.3.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "nest-emitter": "^1.1.1",
    "nestjs-stripe": "^0.4.0",
    "nestjs-twilio": "^1.0.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.0",
    "pug": "^3.0.0",
    "puppeteer": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "socket.io": "^2.3.0",
    "stripe": "^8.117.0",
    "swagger-ui-express": "^4.1.4",
    "twilio": "^3.55.1",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.0",
    "xlsx": "^0.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "25.1.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.13.52",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^10.2.11",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run prettier:one",
      "npm run lint:write:one",
      "git add"
    ]
  }
}
